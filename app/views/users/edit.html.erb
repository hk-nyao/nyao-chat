<div class='container'>
<h1>User info</h1>
<body>
  <div class='col-xs-9'>
    <table class='table'>
      <thead class='table'>
        <tr>
          <th>User name</th>
          <th>Introduction</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class='table'>
        <tr>
          <td>
            <%= form_for(@user) do |f| %>
              <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"名前" %>
          </td>
          <td>
              <%= f.text_field :introduction, autofocus: true, class:"form-control", placeholder:"自己紹介文" %> </td>
          </td>
          <td>
              <%= f.submit "Update info", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <a class="btn btn-info" href= <%= user_path(@user.id) %>>Back</a>
</body>
</div>
