<h1>User info</h1>
<body>
  <div class='col-xs-9'>
    <table class='table'>
      <thead class='table'>
        <tr>
          <th>User name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class='table'>
        <tr>
          <td>
            <%= form_for(@user) do |f| %>
              <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
              <br>
              <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
          </td>
          <td> <%= @user.email %> </td>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
</body>
