<div class="card">
  <div class="card-block">
    <div class="col-md-1">
      <%= gravatar_for message.user %>
    </div>
    <div class="col-md-11">
      <p class="card-text">
        <span class="text-muted">
          <%= message.user.name %> at
          <%= message.timestamp %> says
        </span><br>
        <%= link_to "#{message.body}", message_path(message.id) %>
      </p>
    </div>
  </div>
</div>
